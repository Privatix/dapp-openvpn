{
    "CoreDapp": true,
    "Install": [
        {"Admin" : true,"Command": "bin/inst install --config ../config/installer.agent.config.json"}
    ],
    "Update": [
        {"Admin": false, "Command": "cp -p <OLD_PRODDIR>/config/.env.config.json <PRODDIR>/config/.env.config.json"},
        {"Admin": false, "Command": "cp -p <OLD_PRODDIR>/config/.env.product.config.json <PRODDIR>/config/.env.product.config.json"},
        {"Admin": false, "Command": "cp -p <OLD_PRODDIR>/config/ports.txt <PRODDIR>/config/ports.txt"},
        {"Admin": true, "Command": "rm -rf <PRODDIR>/template"},
        {"Admin": true, "Command": "rm -rf <PRODDIR>/data"},
        {"Admin": true, "Command": "rm -rf <PRODDIR>/log"},
        {"Admin": true, "Command": "cp -pr <OLD_PRODDIR>/data <PRODDIR>/data"},
        {"Admin": false, "Command": "cp -pr <OLD_PRODDIR>/template <PRODDIR>/template"},
        {"Admin": true, "Command": "cp -pr <OLD_PRODDIR>/log <PRODDIR>/log"},
        {"Admin": false, "Command": "cp -p <OLD_PRODDIR>/config/adapter.config.json <PRODDIR>/adapter.config.json"},
        {"Admin": false, "Command": "cp -p <PRODDIR>/template/adapter.<ROLE>.config.json <PRODDIR>/config/adapter.config.json"},
        {"Admin": false, "Command": "<PRODDIR>/bin/update-config -source <OLD_PRODDIR>/config/adapter.config.json -dest <PRODDIR>/config/adapter.config.json -copyItems [['ChannelDir'],['FileLog','Filename'],['Monitor','Addr'],['OpenVPN','ConfigRoot'],['Pusher','CaCertPath'],['Pusher','ConfigPath'],['Sess','Endpoint'],['Sess','Product'],['Sess','Password']]"}
    ],
    "Start": [
        {"Admin" : true,"Command": "bin/inst start"}
    ],
    "Stop": [
        {"Admin" : true,"Command": "bin/inst stop"}
    ],
    "Remove": [
        {"Admin" : true,"Command": "bin/inst remove"}
    ]
}
